            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </opaqueInsets>
            <HBox alignment="CENTER" prefHeight="63.0" prefWidth="405.0" spacing="50.0"
                  AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label prefHeight="21.0" prefWidth="57.0" text="Kolor:"/>
                <TextField fx:id="colorFiltr" prefHeight="31.0" prefWidth="428.0"/>
                <Label text="Gr. kolorystyczna"/>
                <ComboBox fx:id="colorFamilyFiltr" prefWidth="150.0"/>
            </HBox>
            <HBox alignment="CENTER" prefHeight="63.0" prefWidth="405.0" spacing="50.0"
                  AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="80.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label prefHeight="21.0" prefWidth="112.0" text="Rozmiar:"/>
                <TextField fx:id="sizeFiltr" prefHeight="31.0" prefWidth="170.0"/>
                <Label alignment="CENTER" prefHeight="19.0" prefWidth="119.0" text="Posiadane:"/>
                <ComboBox fx:id="ownedFiltr" prefHeight="29.0" prefWidth="172.0"/>
                <Label alignment="CENTER" prefHeight="19.0" prefWidth="107.0" text="Finish:"/>
                <ComboBox fx:id="finishFiltr" prefHeight="29.0" prefWidth="177.0"/>
            </HBox>
            <ButtonBar layoutX="25.0" layoutY="308.0" prefHeight="42.0" prefWidth="317.0"
                       AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="25.0">
                <buttons>
                    <Button mnemonicParsing="false" onAction="#handleNewBead" text="Dodaj"/>
                    <Button alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#handleEditBead"
                            text="Edytuj..." textAlignment="CENTER">
                        <opaqueInsets>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </opaqueInsets>
                    </Button>
                    <Button minWidth="0.0" mnemonicParsing="false" onAction="#handleDeleteBead" prefHeight="29.0"
                            text="Usuń"/>
                </buttons>
                <opaqueInsets>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </opaqueInsets>
            </ButtonBar>
            <HBox layoutX="48.0" layoutY="143.0" prefHeight="63.0" prefWidth="970.0" spacing="50.0"
                  AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0">
