                    <HBox.margin>
                        <Insets top="5.0"/>
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="shapeBox" prefWidth="150.0"/>
                <Label prefHeight="21.0" prefWidth="117.0" text="Producent:">
                    <HBox.margin>
                        <Insets top="5.0"/>
                    </HBox.margin>
                </Label>
                <ComboBox fx:id="brandBox" prefWidth="150.0">
                    <HBox.margin>
                        <Insets right="10.0"/>
                    </HBox.margin>
                </ComboBox>
            </HBox>
