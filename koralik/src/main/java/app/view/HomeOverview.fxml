                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                       AnchorPane.topAnchor="0.0">
                <columns>
                    <TableColumn fx:id="mainCategoryName" prefWidth="75.0" text="Kategoria"/>
                    <TableColumn fx:id="subcategoryName" prefWidth="75.0" text="Podkategoria"/>
                    <TableColumn fx:id="categoryNameColumn" editable="false" prefWidth="106.0" text="Rodzaj"/>
                    <TableColumn fx:id="colorNameColumn" editable="false" prefWidth="123.0" text="Kolor"/>
                    <TableColumn fx:id="sizeColumn" editable="false" minWidth="0.0" prefWidth="106.0"
                                 text="Rozmiar"/>
                    <TableColumn fx:id="finishColumn" prefWidth="75.0" text="Finish"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
                <contextMenu>
                    <ContextMenu fx:id="contextMenu">
                        <items>
                            <MenuItem fx:id="colors" mnemonicParsing="false" text="W tym samym kolorze"/>
                            <MenuItem fx:id="category" mnemonicParsing="false" text="Zobacz kategorie"/>
                            <MenuItem fx:id="duplicate" mnemonicParsing="false" text="Duplikuj"/>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </TableView>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
