<AnchorPane prefHeight="900.0" prefWidth="1000.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.65"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.view.HomeOverviewController">
    <SplitPane dividerPositions="0.32293986636971045" orientation="VERTICAL" prefHeight="1000.0" prefWidth="1000.0"
