                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="21.0" prefWidth="118.0"
                       text="Kategoria:" textAlignment="CENTER">
